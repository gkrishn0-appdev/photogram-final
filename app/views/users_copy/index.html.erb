<h1>List of users</h1>

<%= session[:user_id] %>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>
      <th>
      Private?
    </th>

    <th></th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.id %>
    </td>

    <td>
      <%= user.username %>
    </td>
     <td>
      <% if (user.private) 
      %>

      Yes<% else %>
      No
      <%end%>
    </td>
     <td>
      <% if session[:user_id].present? %>
      <button> Follow </button>
      <%end%>
    </td>

    <td>
      <a href="/users/<%= user.username %>">Show details</a>
    </td>
  </tr>
  
  <% end %>
</table>